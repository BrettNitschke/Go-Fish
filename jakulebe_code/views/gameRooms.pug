div.container-fluid
  h3.card-title Available Gamerooms To Join
  .card-block
    table.table
      thead
        tr
          th Game Id
          th Name
          th Current Players
          th Max Players
          th
      tbody
        for game in gamesToJoin
          tr
            th(scope="row") #{game.gameID}
            td #{game.gameRoomName}
            td #{game.current_players}
            td #{game.max_players}
            td
              button.btn.btn-secondary(method="get" onclick="location.href='/lobby/joinGame?gameID=" + game.gameID  + "'") join game




  h3.card-title Current Gamerooms
  .card-block
    table.table
      thead
        tr
          th Game Id
          th Name
          th Current Players
          th Max Players
          th
      tbody
        for game in gamesCurrentlyIn
          tr
            th(scope="row") #{game.gameID}
            td #{game.gameRoomName}
            td #{game.current_players}
            td #{game.max_players}
            td
              button.btn.btn-secondary(method="get" onclick="location.href='/game?gameID=" + game.gameID  + "'") re-enter game
